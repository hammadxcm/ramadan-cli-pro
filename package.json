{
	"name": "ramadan-cli-pro",
	"version": "1.3.2",
	"description": "Professional-grade Ramadan prayer times CLI with TUI dashboard, i18n, caching, and notifications",
	"type": "module",
	"bin": {
		"ramadan-cli-pro": "./dist/cli.js",
		"ramadan-pro": "./dist/cli.js",
		"ramadan": "./dist/cli.js",
		"ramzan": "./dist/cli.js",
		"roza": "./dist/cli.js"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"start": "node dist/cli.js",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "biome check .",
		"format": "biome check --write .",
		"typecheck": "tsc --noEmit",
		"check": "pnpm lint && pnpm typecheck && pnpm test && pnpm build"
	},
	"keywords": [
		"ramadan",
		"prayer-times",
		"sehar",
		"iftar",
		"hijri",
		"cli",
		"tui",
		"dashboard"
	],
	"author": "Hammad Khan (https://x.com/hammadkhanxcm)",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^22.10.0",
		"@types/react": "^19.0.0",
		"@types/update-notifier": "^6.0.8",
		"@vitest/coverage-v8": "^2.1.9",
		"tsup": "^8.3.5",
		"typescript": "^5.7.2",
		"vitest": "^2.1.8"
	},
	"dependencies": {
		"@clack/prompts": "^0.10.1",
		"commander": "^13.0.0",
		"conf": "^13.0.1",
		"i18next": "^24.2.2",
		"ink": "^5.1.0",
		"node-notifier": "^10.0.1",
		"ora": "^8.1.1",
		"picocolors": "^1.1.1",
		"react": "^18.3.1",
		"string-width": "^8.2.0",
		"update-notifier": "7",
		"zod": "^3.24.1"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.5.0",
	"pnpm": {
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"esbuild"
		]
	}
}
